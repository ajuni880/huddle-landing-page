html 
    box-sizing: border-box

*, ::before, ::after
    box-sizing: inherit 
    padding: 0
    margin: 0

body 
	overflow-x: hidden

img 
	width: 100%
	height: auto 
	display: block

p	
	margin-bottom: 1rem
	color: mid-grayish-blue

a 
	text-decoration: none 
	cursor: pointer
	color: #ffffff
	
ul 
	list-style: none

input 
	display: block
	border: 0
	outline: 0
	padding: 1rem
	border-radius: 5px
	margin-bottom: 1rem
	width: 100%

h1, h2, h3, h4, h5, h6 
	letter-spacing: 1px
	margin-bottom: 1rem